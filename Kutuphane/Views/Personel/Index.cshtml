@using Kutuphane.Models.Entity
@model List<Personel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2 style="color:1abc9c;">PERSONELLER</h2>
<table class="table table-bordered">
    <tr style="background-color:1abc9c; color:ffffff;">
        <th>Id</th>
        <th>Adı</th>
        <th>Soyadı</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var personel in Model)
    {
        <tr>
            <td>@personel.Id</td>
            <td>@personel.Adi</td>
            <td>@personel.Soyadi</td>
            
            <td>
                @Html.ActionLink("Sil", "PersonelSil", new { id = personel.Id },
           new { @class = "btn btn-danger", onclick = "return confirm('Silmek İstiyor Musunuz')" })
        </td>

        <td><a href="/Personel/PersonelGetir/@personel.Id" class="btn btn-success">Güncelle</a>  </td>

    </tr>
}
</table>
<div style="margin-top:15px"></div>
<div>
    <a href="/Personel/PersonelEkle/" class="btn btn-primary" style="background-color:1abc9c; color:ffffff; border:0;" />Yeni Personel Ekle </a>
</div>


