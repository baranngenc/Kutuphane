
@{
    Layout = null;
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        body {
            font-family: "Lato", sans-serif;
        }

        .sidebar {
            height: 100%;
            width: 160px;
            position: fixed;
            z-index: 1;
            top: 0;
            left: 0;
            background-color: #1abc9c;
            overflow-x: hidden;
            padding-top: 16px;
        }

            .sidebar a {
                padding: 6px 8px 6px 16px;
                text-decoration: none;
                font-size: 14px;
                color: #ffffff;
                display: block;
            }

                .sidebar a:hover {
                    color: #818181;
                }

        .main {
            margin-left: 160px; /* Same as the width of the sidenav */
            padding: 0px 10px;
        }

        @@media screen and (max-height: 450px) {
            .sidebar {
                padding-top: 15px;
            }

                .sidebar a {
                    font-size: 14px;
                }
        }
    </style>
</head>
<body>

    <div class="sidebar">
        <a href="/Anasayfa/Index/"><i class="glyphicon glyphicon-home" ></i> &nbsp; Ana Sayfa</a>
        <a href="/Kategori/Index/"><i class="glyphicon glyphicon-list"></i> &nbsp; Kategoriler</a>
        <a href="/Kitap/Index/"><i class="glyphicon glyphicon-book"></i> &nbsp; Kitaplar</a>
        <a href="/Yazar/Index/"><i class="glyphicon glyphicon-pencil"></i> &nbsp; Yazarlar</a>
        <a href="/Personel/Index/"><i class="glyphicon glyphicon-certificate"></i> &nbsp; Personeller</a>
        <a href="/Uye/Index/"><i class="glyphicon glyphicon-user"></i> &nbsp; Üyeler</a>
        <a href="/Emanet/EmanetVer/"><i class="glyphicon glyphicon-circle-arrow-right"></i> &nbsp; Emanet Ver</a>
        <a href="/Emanet/Index/"><i class="glyphicon glyphicon-circle-arrow-left"></i> &nbsp; Emanet Al</a>
        <a href="/Hareket/Index/"><i class="glyphicon glyphicon-dashboard"></i> &nbsp; Kitap Hareketleri</a>
        <a href="/Admin/Index/"><i class="glyphicon glyphicon-king"></i> &nbsp; Admin</a>
        
      
    </div>

    <div class="main">
       @RenderBody()
    </div>

</body>
</html>
